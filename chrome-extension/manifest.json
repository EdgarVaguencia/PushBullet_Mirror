{
  "manifest_version" : 2,
  "name" : "PushTime: Your push in timeline",
  "description" : "Lista de notificaciones de tus dispositivos a traves de la app PushBullet",
  "version" : "0.2.4",
  "browser_action":{
    "default_icon" : "image/icon.png",
    "default_popup" : "index.html"
  },
  "author" : "Edgar Valencia <isc.edgarvalencia@gmail.com>",
  "homepage_url" : "https://github.com/EdgarVaguencia/PushBullet_Mirror",
  "permissions" : [ "cookies", "https://*.pushbullet.com/", "http://*.pushbullet.com/" ],
  "background" : {
    "scripts" : ["./js/app.js"]
  },
  "icons" : {
    "128" : "image/PushTime128.png",
    "48" : "image/PushTime48.png",
    "16" : "image/PushTime16.png"
  }
}
